<layout id="PickerLayout">
    <label 
        id="topElement"
        text="Timer"
        x="center" 
        y="10%"
        font="Graphics.FONT_LARGE"  
        color="Graphics.COLOR_WHITE" 
        justification="Graphics.TEXT_JUSTIFY_CENTER" 
    />
    <label
        id="minElement"
        text="00"
        x="40%"
        y="center"
        font="Graphics.FONT_NUMBER_THAI_HOT"
        justification="Graphics.TEXT_JUSTIFY_RIGHT"
    />
    <label
        text=":"
        x="center"
        y="center"
        font="Graphics.FONT_NUMBER_THAI_HOT"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="secElement"
        text="00"
        x="60%"
        y="center"
        font="Graphics.FONT_NUMBER_THAI_HOT"
        justification="Graphics.TEXT_JUSTIFY_LEFT"
    />
    <label 
        id="bottomElement"
        text="Done"
        x="center" 
        y="80%"
        font="Graphics.FONT_SYSTEM_LARGE"  
        color="Graphics.COLOR_WHITE" 
        justification="Graphics.TEXT_JUSTIFY_CENTER" 
    />
</layout>